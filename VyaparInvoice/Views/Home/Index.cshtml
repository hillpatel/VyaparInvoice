@{
    ViewData["Title"] = "Home Page";
}

<style>
    .welcomeClass {
        position: absolute;
        z-index: 100;
        top: 8%;
        font-size: 35px;
        font-weight: 600;
        color: white;
        width: 100%;
        background-color: rgb(0 0 0 / 0.50);
    }
</style>
<p class="pageTitle">Welcome to Vyaapar Invoice</p>
<br />
<section class="section" style="padding: 0px 30px 30px 30px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6  col-sm-6" style="padding-right:70px">
                <div class="custom-module">
                    <h4>About Us</h4>
                    <p>Vyapaar Invoice is a web application that helps making the invoicing journey of your business easier and smoother by providing necessary features leading towards time saving and professionalism. If you are new to this journey, start by <b>Creating Your Profile</b> if not created. After completion of the same, follow the basic setup steps.</p>
                    <div class="btn-wrapper">
                        <a href="/Profiles" class="btn btn-primary">CREATE PROFILE</a>
                    </div>
                    <br/>
                </div><!-- end custom-module -->
            </div><!-- end col -->

            <div class="col-md-6  col-sm-6">
                <div class="custom-module">
                    <h4>Basic Setup</h4>
                    <ul class="list-style-2">
                        @*<li><i class="fa fa-star-o"></i> Create your <b>Profile</b></li>*@
                        <li><i class="fa fa-star-o"></i> Add <b>Units</b> to be used in your product</li>
                        <li><i class="fa fa-star-o"></i> Add all your <b>Products</b></li>
                        <li><i class="fa fa-star-o"></i> <b>Set Price</b> of your product as per each unit</li>
                        <li><i class="fa fa-star-o"></i> You are all <b>Set To Go</b></li>
                        <li><i class="fa fa-star-o"></i> Start generating <b>Chalaans</b> & <b>Invoices</b></li>
                    </ul>
                </div><!-- end custom-module -->
            </div><!-- end col -->

            <!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>

<section class="section db" style="padding: 10px 30px 10px 30px;">
    <div class="container">
        <div class="row">
        <br/>
            <div class="col-lg-4 col-md-4">
                <div class="stat-count">
                    <h4 class="stat-timer">@TempData["productsCount"]</h4>
                    <h3>Total Products Listed</h3>
                    <p>This number above shows the total products of your company listed in this system. </p>
                </div><!-- stat-count -->
            </div><!-- end col -->

            <div class="col-lg-4 col-md-4">
                <div class="stat-count">
                    <h4 class="stat-timer">@TempData["chalaansCount"]</h4>
                    <h3>Chalaans Generated</h3>
                    <p>The chalaans being generated till date makes a total of the above mentioned number. </p>
                </div><!-- stat-count -->
            </div><!-- end col -->

            <div class="col-lg-4 col-md-4">
                <div class="stat-count">
                    <h4 class="stat-timer">@TempData["invoicesCount"]</h4>
                    <h3>Invoices Generated</h3>
                    <p>A total of invoices generated till date has an above mentioned count. </p>
                </div><!-- stat-count -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>