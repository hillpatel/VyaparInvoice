@model VyaparInvoice.Models.CreateProductUnitRateViewModel

@{
    ViewData["Title"] = "Details";
}
<p class="pageTitle">Products</p>
<br />
<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        @for (int i = 0; i < Model.Units.Count; i++)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.Units[i].Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rates[i]) Rs.
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
